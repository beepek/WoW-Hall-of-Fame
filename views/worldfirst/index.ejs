<%- include('../partials/header') %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <title>WoW Hall of Fame</title>
</head>


<body>
  <nav><a href="/worldfirst">View All World Firsts</a><a href="/worldfirst/new">Add World First</a></nav>

  <h1>World Firsts</h1>
  
  <table>
    <thead>
      <tr>
        <th>Boss</th>
        <th>Guild</th>
        <th>Kill Date</th>
        <th>Attempts</th>
      </tr>
    </thead>
    <tbody>
      
	  <% worldFirst.forEach(w => { %>
	   
	 
        <tr>
          <td><%= w.boss %></td>
          <td><%= w.guild %> </td>
          <td><%= w.killDate %></td>
          <td><%= w.attempts %></td>
          <td><a id="details" href="/worldfirst/<%= w._id %>">Show Details</a></td>
          
         

       
         
        </tr>

		<% }) %>
   
    </tbody>
  
  </table>
</body>
</html>
<%- include('../partials/footer') %>